{% extends 'osim-tenon/layouts/_settings' %}

{% if id %}
    {% set title = 'Edit Account'|t('osim-tenon') %}
    {% set pageTitle = 'Edit'|t('osim-tenon') %}
{% else %}
    {% set title = 'New Account'|t('osim-tenon') %}
    {% set pageTitle = 'New'|t('osim-tenon') %}
{% endif %}

{% set tabs = [
    {
        label: 'General'|t('osim-tenon'),
        url: '#settings-account-general',
        class: null,
    },
    {
        label: 'Test API Settings'|t('osim-tenon'),
        url: '#settings-account-test-api-settings',
        class: null,
    }
] %}

{% block actionButton %}
    <div class="buttons">
        <div class="btngroup submit">
            <input type="submit" class="btn submit" value="{{'Save'|t('osim-tenon')}}">
        </div>
    </div>
{% endblock %}

{% block content %}
    {{actionInput('osim-tenon/accounts/save')}}
    {{redirectInput('osim-tenon/settings/accounts')}}

    {% if id %}<input type="hidden" name="data[id]" value="{{ id }}">{% endif %}

	<div id="settings-account-general">
		{% include 'osim-tenon/settings/accounts/_item-general' %}
	</div>

	<div id="settings-account-test-api-settings" class="hidden">
		{% include 'osim-tenon/settings/accounts/_item-test-api-settings' %}
	</div>
{% endblock %}
